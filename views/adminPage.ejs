<h1 class="mt-4">AdminPage</h1>
<p class="lead mb-3">Welcome <%= user.name %>
</p>

<div class="container-float p-5">
    <div class="my-2 d-flex justify-content-center align-items-center">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-12 col-lg-12">
                <h3 class="mx-5">Users</h3>
                <div class="card bg-white">
                    <div class="card-body ">
                        <%if (activeUsers.length>0){%>
                            <ul class="list-group">
                                <% activeUsers.forEach(user=> {%>
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div>
                                            <div>
                                                <b>
                                                    <%=user[1] %>
                                                </b>
                                            </div>
                                            <br>
                                            <div>
                                                <%=user[0] %>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="text-center p-1">
                                                <a href="/auth/kickOutUser/<%=user[0]%>">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                                        fill="currentColor" class="bi bi-trash3 text-danger"
                                                        viewBox="0 0 16 16">
                                                        <path
                                                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% }else{ %>
                                <div colspan="6" class='text-center text-danger'><b>No Active User
                                        found...</b>
                                </div>
                                <% }%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/auth/logout" class="btn btn-secondary">Logout</a>